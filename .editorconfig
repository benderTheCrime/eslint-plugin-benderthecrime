# EditorConfig is awesome: http://EditorConfig.org

root = true

[.?*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
max_line_length = 120
trim_trailing_whitespace = true


[*.{js,md}]
indent_size = 4
insert_final_newline = false
tab_width = 4

[*.{json,yml}]
indent_size = 2
tab_width = 2
